<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ade4f9"
    tools:context="com.example.miaobaitiao.activity.Login2Activity">
    <ImageView
        android:elevation="3dp"
        android:id="@+id/iv_logo"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_logo1"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_logo"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="钱袋"/>

    <RelativeLayout
        android:id="@+id/layout_phone"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/iv_logo"
        android:layout_marginTop="100dp"
        android:background="@drawable/login_input"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_phone"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_phone"/>
        <EditText
            android:id="@+id/et_phone"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:maxLength="11"
            android:hint="手机号码"
            android:textColorHint="#ade4f9"
            android:inputType="phone"
            android:layout_toRightOf="@id/iv_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_code"
        android:layout_width="match_parent"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@id/layout_phone"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_input"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_code"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_code"/>
        <EditText
            android:id="@+id/et_code"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:maxLength="4"
            android:hint="验证码"
            android:textColorHint="#ade4f9"
            android:inputType="phone"
            android:layout_marginRight="100dp"
            android:layout_toRightOf="@id/iv_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Button
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/bt_getCode"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textColor="#f3f8fc"
            android:text="获取验证码"
            android:background="@drawable/login_code"/>

    </RelativeLayout>

    <Button
        android:layout_below="@id/layout_code"
        android:elevation="1dp"
        android:layout_marginTop="70dp"
        android:id="@+id/bt_Login"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="50dp"
        android:layout_height="50dp"
        android:text="快速登录"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:background="@drawable/button"/>

</RelativeLayout>
